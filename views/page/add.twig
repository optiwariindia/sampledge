{% import "macro/form.twig" as form %}
<div class="section-body">
	<div class="container-fluid">
		<div class="row clearfix">
			<div class="col-lg-12">
				<div class="d-lg-flex justify-content-between">
					<ul class="nav nav-tabs page-header-tab">
						{% for item in tabs %}
							<li class="nav-item">
								<a class="nav-link" data-toggle="tab" href="#{{item.id}}">{{item.title}}
								</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="section-body">
	<div class="container-fluid">
		<div class="row clearfix">
			<div class="col-md-12">
				<div class="tab-content">
					{% for tabinfo in tabs %}
						{{ form.tab(tabinfo) }}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
